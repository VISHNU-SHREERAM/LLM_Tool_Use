set shell := ["bash", "-cu"]
set dotenv-load

# Set the default recipe
default: hello

@hello:
    echo "Hello, Welcome to Our System"
    
# A recipe to build the project
@setup:
    echo "Building the requirements..."
    uv sync
    uv run playwright install firefox
    ollama pull qwen2.5:7b
    echo "Requirements built successfully"

# A recipe to run the project
@run:
    echo "starting the project..."
    uv sync
    cd unified_logging && uv run .\start_logging_server.py &
    cd browser_control && uv run .\browser.py &
    cd HardwareApplication && uv run .\hardware.py &
    cd tool_use && uv run .\llm.py

@mkdocs:
    echo "serving..."
    cd mk_docs/voice_control_mk_docs && uv sync && uv run mkdocs serve -a 127.0.0.1:8888
    echo "Documentation serving successfully"